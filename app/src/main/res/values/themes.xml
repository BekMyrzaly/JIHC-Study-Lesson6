<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Simple_calculator" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="simple_calculator_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_num_click1</item>
        <item name="android:layout_weight">1</item>
    </style>



    <style name="simple_lr" parent="simple_calculator_button">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="simple_rl" parent="simple_calculator_button">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>



    <style name="simple_solve_button" parent="simple_calculator_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_solve_click1</item>
    </style>



    <style name="simple_gray_lr" parent="simple_lr">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/btn_gray_click1</item>
    </style>

    <style name="simple_gray_rl" parent="simple_rl">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/btn_gray_click1</item>
    </style>

    <style name="simple_gray" parent="simple_calculator_button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/btn_gray_click1</item>
    </style>


    <style name="calculator_land" parent="simple_calculator_button">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="calculator_land_lr" parent="simple_lr">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="calculator_land_rl" parent="simple_rl">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="simple_solve_button_land" parent="simple_solve_button">
        <item name="android:textSize">20dp</item>
    </style>


    <style name="simple_gray_lr_land" parent="simple_gray_lr">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="simple_gray_rl_land" parent="simple_gray_rl">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="simple_gray_land" parent="simple_gray">
        <item name="android:textSize">20dp</item>
    </style>


</resources>